<Page loaded="loaded">
  <StackLayout orientation="vertical">
    <!-- <Image src="~/images/logo.png" ></Image> -->
    <Image src="res://logo" stretch="none" horizontalAlignment="center" ></Image><!--App_Resources/Android/drawable-mdpi-->

     <TextField id="email" text="{{ email }}" hint="Email Address" keyboardType="email" autocorrect="false" autocapitalizationType="none" />
     <TextField hint="Password" text="{{ password }}" secure="true" />

     <Button text="Sign in" tap="signIn" />
     <Button text="Sign up for Groceries" class="link" tap="register"/>

 </StackLayout>
</Page>
